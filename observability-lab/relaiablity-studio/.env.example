# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=reliability_studio
DB_SSLMODE=disable

# Observability Stack URLs
PROMETHEUS_URL=http://prometheus:9090
LOKI_URL=http://loki:3100
TEMPO_URL=http://tempo:3200

# Application Configuration
PORT=9000
LOG_LEVEL=info

# Security (TODO: Generate secure values for production)
JWT_SECRET=change-this-to-a-secure-random-string-in-production
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Kubernetes Configuration (optional)
# KUBECONFIG=/path/to/kubeconfig
# Leave empty to use in-cluster configuration when running in Kubernetes

# Feature Flags
ENABLE_KUBERNETES_INTEGRATION=true
ENABLE_AUTHENTICATION=false  # Set to true when JWT is implemented

# Performance Tuning
DB_MAX_OPEN_CONNS=50
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME_MINUTES=30
SLO_CALCULATION_INTERVAL_MINUTES=5

# Development Settings
DEBUG=false
ENABLE_PPROF=false
